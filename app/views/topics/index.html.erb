<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.construction_site_picture.url %>
            <%= image_tag topic.drawing.url %>
            <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">　工事内容：<%= topic.construction_work_contents %></p>
          　<p class="topic-text">　現場住所： <%= topic.address %></p>
            <p class="topic-text">　希望工期： <%= topic.suitable_time %></p>
            <p class="topic-text">　予算：   <%= topic.budget %>
            <p class="topic-text">　重要視項目：   <%= topic.important_think %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
