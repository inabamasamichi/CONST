<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">見積り</h1>
        <%= form_for @topic do |f| %>

          <div class="form-group">
            <%= f.label :工事内容 %>
            <%= f.text_area :construction_work_contents, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :必要職種 %>
            <%= f.text_area :occupation, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :現場の写真 %>
            <%= f.file_field :construction_site_picture %>
          </div>

          <div class="form-group">
            <%= f.label :図面 %>
            <%= f.file_field :drawing%>
          </div>

          <div class="form-group">
            <%= f.label :現場の住所 %>
            <%= f.text_area :address, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :希望工期 %>
            <%= f.text_area :suitable_time, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :予算 %>
            <%= f.text_area :budget, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :重要視項目 %>
            <%= f.text_area :important_think, class: 'form-control' %>
          </div>





          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
